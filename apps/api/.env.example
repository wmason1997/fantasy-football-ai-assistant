# Server
PORT=3001
NODE_ENV=development

# Database
# Development: postgresql://dev_user:dev_password@localhost:5432/fantasy_football
# Production (Railway): Automatically provided as DATABASE_URL
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/fantasy_football

# Redis
# Development: redis://localhost:6379
# Production (Railway): Automatically provided as REDIS_URL
REDIS_URL=redis://localhost:6379

# JWT
# CRITICAL: Generate a secure random secret for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Sleeper API
SLEEPER_API_BASE_URL=https://api.sleeper.app/v1

# CORS
# Development: http://localhost:3000
# Production: Your Vercel deployment URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=http://localhost:3000
