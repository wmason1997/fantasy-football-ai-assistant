  "dependencies": {
    "@fantasy-football/database": "workspace:*",
    "@fantasy-football/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.8.2",
    "node-cron": "^4.2.1",
    "undici": "^6.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "msw": "^2.12.7",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
